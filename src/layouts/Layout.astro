---
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
}

const { title = 'Free Range Ideas', description } = Astro.props as Props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />
		{description && <meta name="description" content={description} />}
	</head>
	<body class="bg-background text-text font-sans antialiased">
			<div class="mx-auto max-w-[1200px] px-7 sm:px-5 pt-3">
				<p class="m-0 text-sm text-[color:var(--color-muted)] bg-[color:var(--color-surface-2)] border border-white/10 rounded-md px-3 py-2">
					Heads up: this is a side project, so the design is... hasty.
				</p>
			</div>
			<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
